<?xml version="1.0" ?>

<launch>
    <rosparam command="load" file="$(find Zumo2Compet)/config/zumo.yaml" />
    <param name="robot_description" textfile="$(find Zumo2Compet)/urdf/zumo.urdf" />
    
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <remap from="/joint_states" to="/zumo/joint_states" />
    </node>
    
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find Zumo2Compet)/rviz/zumo.rviz" />
</launch>
